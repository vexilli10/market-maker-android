<?xml version="1.0" encoding="utf-8"?>
<!-- This layer-list is the correct way to set a full-screen background
     for the Android 12+ system splash screen. -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- First, a solid background color. This is shown instantly. -->
    <item android:drawable="@color/splash_background_color"/>

    <!-- Second, your actual background image. -->
    <item>
        <bitmap
            android:gravity="fill"
            android:src="@drawable/splash_background"/>
    </item>

</layer-list>